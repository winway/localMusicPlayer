<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:padding="10dp"
    app:cardBackgroundColor="@color/pink_200"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rvitem_main_music_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="1" />

        <TextView
            android:id="@+id/rvitem_main_music_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/rvitem_main_music_id_tv"
            android:singleLine="true"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="啊啊啊啊" />

        <TextView
            android:id="@+id/rvitem_main_music_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rvitem_main_music_name_tv"
            android:layout_alignStart="@id/rvitem_main_music_name_tv"
            android:layout_marginTop="10dp"
            android:textColor="#888"
            android:textSize="14sp"
            tools:text="啊啊啊" />

        <TextView
            android:id="@+id/rvitem_main_music_line_tv"
            android:layout_width="2dp"
            android:layout_height="18dp"
            android:layout_alignTop="@id/rvitem_main_music_singer_tv"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/rvitem_main_music_singer_tv"
            android:background="#888" />

        <TextView
            android:id="@+id/rvitem_main_music_album_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/rvitem_main_music_singer_tv"
            android:layout_toEndOf="@id/rvitem_main_music_line_tv"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#888"
            android:textSize="14sp"
            tools:text="啊啊啊啊" />

        <TextView
            android:id="@+id/rvitem_main_music_duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rvitem_main_music_singer_tv"
            android:layout_alignParentEnd="true"
            android:textColor="#888"
            android:textSize="14sp"
            tools:text="11:11" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>